{
    "comments": {
        // symbol used for single line comment
        "lineComment": "#",
    },
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["<", ">"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that are highlighted in pairs
    "brackets": [
        ["<", ">"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["<", ">"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // regex for when to auto-indent
    "indentationRules": {
      "increaseIndentPattern": "^(This_Should_Never_Happen){5000}$",
      "decreaseIndentPattern": "^(This_Should_Never_Happen){5000}$"
    },
    "onEnterRules": [
        {
            "beforeText": "^.*:$",
            "action": {
                "indent": "indent"
            }
        }
    ]
}
